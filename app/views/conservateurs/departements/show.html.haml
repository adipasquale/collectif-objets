- content_for(:head_title) { "#{@departement.nom} - Vue tableau" }

%main#contenu.fr-container.fr-mb-8w
  = render "shared/breadcrumbs", links: [["DÃ©partements", conservateurs_departements_path]], current_page_label: @departement.nom
  %h1= @departement.nom

  = render "campaigns", departement: @departement
  = render "stats", stats: @departement.stats

  #tabs-container
    .fr-tabs
      %ul.fr-tabs__list{ role: :tablist, "aria-label": "Tableau ou Carte" }
