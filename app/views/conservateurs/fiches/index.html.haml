- content_for(:head_title) { "Fiches attribuées" }

%main.fr-container.fr-mb-8w
  = render("shared/breadcrumbs", links: [["Accueil", root_path]], current_page_label: "Fiches attribuées")

  %h1 Fiches attribuées

  - if @dossiers.blank?
    %i Aucune fiche attribuée
  - else 
    .fr-table
      %table
        %thead
          %tr
            %th Commune
            %th Nombre d'objets
            %th Fiches attribuées
        %tbody
          - @dossiers.each do |dossier|
            %tr
              %td= link_to dossier.nom_commune, conservateurs_commune_path(dossier.commune), "data-turbo-frame": "_top"
              %td= dossier.objets_count
              %td
