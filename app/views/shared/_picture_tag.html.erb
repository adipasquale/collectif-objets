<picture>
  <source
    type="image/webp"
    srcset="<%= asset_path "#{filename_without_extension}.webp" %>"
  >
  <source
    type="image/png"
    srcset="<%= asset_path "#{filename_without_extension}.png" %>"
  >
  <img
    src="<%= asset_path "#{filename_without_extension}.png" %>"
    alt="<%= alt %>"
    class="<%= local_assigns[:img_class] %>"
  >
</picture>
