= dsfr_header(logo_text: "Ministère\nde la Culture".html_safe,
  title: "Collectif Objets",
  tagline: "Préservez votre patrimoine mobilier") do |c|

  - if current_conservateur
    - c.with_tool_link title: current_conservateur, path: edit_conservateur_registration_path, classes: ["fr-icon-settings-5-line"]
    - c.with_tool_link title: "Déconnexion", path: destroy_conservateur_session_path, classes: ["fr-icon-logout-box-r-line"], html_attributes: { "data-turbo-method": "DELETE" }

    - if current_conservateur.departements.count > 4
      - c.with_tool_link title: "Mes départements", path: conservateurs_departements_path
    - else
      - current_conservateur.departements.each do |departement|
        - c.with_direct_link_simple title: departement, path: conservateurs_departement_path(departement.code)

    - c.with_search do
      = render "shared/header/header_conservateur_search"

  - elsif current_user
    - c.with_tool_link title: "Voir les objets de #{current_user.commune.nom}", path: commune_objets_path(current_user.commune), classes: ["fr-icon-eye-line"]
    - c.with_tool_link title: "Déconnexion", path: destroy_user_session_path, classes: ["fr-icon-logout-box-r-line"], html_attributes: { "data-turbo-method": "DELETE" }
    - c.with_tool_link title: "Préférences", path: edit_user_registration_path, classes: ["fr-icon-settings-5-line"]

    - c.with_direct_link_simple title: "Recensement", path: commune_objets_path(current_user.commune)
    - c.with_direct_link_simple title: "Messagerie", path: commune_messages_path(current_user.commune)
    - c.with_direct_link_simple title: "Rapport du conservateur", path: "#" # TODO
    - c.with_direct_link_dropdown title: "À propos" do |dropdown|
      - dropdown.with_link title: "Comment ça marche ?", path: aide_path
      - dropdown.with_link title: "On parle de nous", path: presse_path
      - dropdown.with_link title: "Statistiques", path: stats_path

  - elsif current_admin_user
    - c.with_tool_link title: "#{current_admin_user} (Admin)", path: "#", classes: ["fr-icon-admin-line"]
    - c.with_tool_link title: "Déconnexion", path: destroy_admin_user_session_path, classes: ["fr-icon-logout-box-r-line"], html_attributes: { "data-turbo-method": "DELETE" }
    - c.with_direct_link_simple title: "Accueil Admin", path: admin_path, active: current_page?(controller: '/pages', action: 'admin')
    - c.with_direct_link_simple title: "Communes", path: admin_communes_path, active: %w[Admin::CommunesController Admin::UsersController].include?(controller.class.name)
    - c.with_direct_link_simple title: "Conservateurs", path: admin_conservateurs_path, active: controller.class.name == "Admin::ConservateursController"
    - c.with_direct_link_simple title: "Campagnes", path: admin_campaigns_path, active: controller.class.name == "Admin::CampaignsController"
    - c.with_direct_link_simple title: "CMS", path: "https://collectif-objets-cms.netlify.app/", html_attributes: { target: "_blank", rel: "noopener" }

  - else
    - c.with_tool_link title: "Comment ça marche ?", path: aide_path, classes: ["fr-icon-question-line"]
    - c.with_tool_link title: "Connexion", path: connexion_path, classes: ["fr-icon-lock-line"]
    - c.with_tool_link title: "Voir les objets dans ma commune", path: objets_path, classes: ["fr-icon-image-line"]
