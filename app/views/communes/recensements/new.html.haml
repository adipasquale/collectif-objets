- content_for(:head_title) { "Recensement Â· #{truncate(@recensement.objet.nom, length: 20)}" }
%main.fr-container.fr-py-8w
  = render "shared/breadcrumbs",
    links: [["Accueil", root_path],
      ["Objets de #{current_user.commune.nom}", commune_objets_path(current_user.commune)],
      [@recensement.objet.nom, commune_objet_path(@recensement.commune, @recensement.objet)],
    ], current_page_label: "Recensement"
  = render "recensements/etapes", expanded: @recensement.first?
  = render "recensements/form",
    recensement: @recensement,
    form_url: commune_objet_recensements_path(@recensement.commune, @recensement.objet),
    back_to_objet_url: commune_objet_path(@recensement.commune, @recensement.objet)
